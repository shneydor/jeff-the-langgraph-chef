# Jeff the LangGraph Chef - Environment Configuration

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/jeff_chef_db
REDIS_URL=redis://localhost:6379/0

# Application Configuration
ENV=development
DEBUG=true
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Jeff's Personality Configuration
JEFF_TOMATO_OBSESSION_LEVEL=9
JEFF_ROMANTIC_INTENSITY=8
JEFF_BASE_ENERGY_LEVEL=7
JEFF_CREATIVITY_MULTIPLIER=1.5

# Quality Thresholds
PERSONALITY_CONSISTENCY_THRESHOLD=0.90
CONTENT_QUALITY_THRESHOLD=0.85
RESPONSE_TIME_THRESHOLD=2.0

# Security
SECRET_KEY=your_secret_key_here_change_in_production
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Feature Flags
ENABLE_MEMORY_SYSTEM=true
ENABLE_IMAGE_GENERATION=true
ENABLE_MULTI_PLATFORM=true